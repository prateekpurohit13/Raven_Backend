{
  "detection_modes": {
    "field_based": {
      "description": "Field name + value pattern matching (your approach)",
      "patterns": {
        "pan_card": {
          "fieldNames": ["pan", "pancard", "pancardnumber", "pannumber", "panno"],
          "valuePattern": "[A-Z]{5}[0-9]{4}[A-Z]{1}",
          "riskLevel": "HIGH",
          "category": "FINANCE",
          "tags": ["PII", "FINANCE"]
        },
        "visa_card": {
          "fieldNames": ["cardnumber", "ccnumber", "creditcard", "card", "cc", "visa", "visacard"],
          "valuePattern": "\\b4[0-9]{12}(?:[0-9]{3})?\\b",
          "riskLevel": "CRITICAL",
          "category": "FINANCE",
          "tags": ["FINANCE", "PII"]
        },
        "mastercard": {
          "fieldNames": ["cardnumber", "ccnumber", "creditcard", "card", "cc", "mastercard"],
          "valuePattern": "\\b(5[1-5][0-9]{14}|2(22[1-9][0-9]{12}|2[3-9][0-9]{13}|[3-6][0-9]{14}|7[0-1][0-9]{13}|720[0-9]{12}))\\b",
          "riskLevel": "CRITICAL",
          "category": "FINANCE",
          "tags": ["FINANCE", "PII"]
        },
        "maestro_card": {
